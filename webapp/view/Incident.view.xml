<mvc:View controllerName="ehsm.controller.Incident"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page id="incidentPage" title="Incident Management" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="incidentTable" items="{path: '/incidentSet'}" mode="None" class="sapUiResponsiveMargin">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Incidents" level="H2" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Incident ID" />
                    </Column>
                    <Column>
                        <Text text="Plant" />
                    </Column>
                    <Column>
                        <Text text="Description" />
                    </Column>
                    <Column>
                        <Text text="Category" />
                    </Column>
                    <Column>
                        <Text text="Priority" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Created By" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{IncidentId}" />
                            <Text text="{Plant}" />
                            <Text text="{IncidentDescription}" />
                            <Text text="{IncidentCategory}" />
                            <Text text="{IncidentPriority}" />
                            <Text text="{IncidentStatus}" />
                            <Text text="{IncidentDate}" />
                            <Text text="{CreatedBy}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
